using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace p4ela
{
    internal class Program
    {
        public static void Main(string[] args)
        {
            double length, width;
            Console.Write("Введите длину: ");
            if (!double.TryParse(Console.ReadLine(), out length) || length <= 0)
            {
                Console.WriteLine("Введите корректное положительное число для длины.");
                return;
            }
            Console.Write("Введите ширину: ");
            if (!double.TryParse(Console.ReadLine(), out width) || width <= 0)
            {
                Console.WriteLine("Введите корректное положительное число для ширины.");
                return;
            }
            double perimeter = Perimeter(length, width);
            Console.WriteLine($"Периметр прямоугольника: {perimeter:F2}");
        }
        public static double Perimeter(double length, double width)
        {
            return 2 * (length + width);
        }
    }
}
